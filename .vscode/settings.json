{
  "cSpell.words": [
    "Ã†sthetic",
    "endcustom",
    "endrandom",
    "stylelint",
    "toets"
  ],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/LICENSE":true,
  //  "**/node_modules": true
  },
  "workbench.colorCustomizations": {
    "window.inactiveBorder": "#00aeff",
  },
  "highlight.regexes": {
    "(\\L\\T)(?=\\.)": {
      "regexFlags": "g",
      "decorations": [
        {
          "color": "#81D4FA",
        }
      ]
    },
    "^(-{3})([\\s\\S]*)(-{3})": {
      "regexFlags": "g",
      "filterFileRegex": "tests/.*\\.(html|liquid|css|scss|js|ts|xml)",
      "decorations": [
        {
          "color": "#888888"
        },
        {
          "color": "#81D4FA",
          "fontStyle": "italic"
        },
        {
          "color": "#888888",
        }
      ]
    }
  },
  "liquid.format.ignore": [
    "tests/samples/**"
  ],
  "liquid.format.markup": {
    "forceAttribute": 2
  }

}
