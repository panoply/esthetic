{
  "cSpell.words": [
    "Ã†sthetic",
    "aestheticignore",
    "Amato",
    "ANTLR",
    "endcustom",
    "endfor",
    "endrandom",
    "estheticignore",
    "estheticrc",
    "linebreak",
    "stylelint",
    "toets"
  ],
  "json.schemas": [
    {
      "fileMatch": [
        "package.json"
      ],
      "url": "./schema.json"
    }
  ],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/LICENSE":true,
   "**/node_modules": true
  },
  "workbench.colorCustomizations": {
    "window.inactiveBorder": "#00aeff",
  },
  "highlight.regexes": {
    "(\\L\\T)(?=\\.)": {
      "regexFlags": "g",
      "decorations": [
        {
          "color": "#81D4FA",
        }
      ]
    },
    "^(-{3})([\\s\\S]*)(-{3})": {
      "regexFlags": "g",
      "filterFileRegex": "tests/.*\\.(html|liquid|css|scss|js|ts|xml)",
      "decorations": [
        {
          "color": "#888888"
        },
        {
          "color": "#81D4FA",
          "fontStyle": "italic"
        },
        {
          "color": "#888888",
        }
      ]
    }
  },
  "liquid.format.ignore": [
    "tests/samples/**"
  ],
  "liquid.format.rules": {
    "liquid": {
      "commentIndent": true,
      "commentNewline": true,
      "delimiterTrims": "preserve",
      "ignoreTagList": [],
      "lineBreakSeparator": "before",
      "normalizeSpacing": true,
      "preserveComment": false,
      "quoteConvert": "single",
      "valueForce": "intent"
    },
    "markup": {
      "quoteConvert": "double",
      "commentNewline": true,
      "forceIndent": true,
      "ignoreJS": false,
      "attributeSortList": [],
      "forceAttribute": 2
    }
  },
  "[liquid]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "sissel.shopify-liquid"
  }

}
