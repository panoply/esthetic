{
  "name": "@liquify/prettify",
  "version": "0.1.0",
  "license": "MIT",
  "author": "ΝΙΚΟΛΑΣ ΣΑΒΒΙΔΗΣ <nicos@gmx.com>",
  "description": "🩸 Liquid Language beautification support for multiple languages.",
  "engines": {
    "pnpm": ">=4",
    "node": ">=12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/panoply/liquify/master/packages/prettify"
  },
  "bugs": {
    "url": "https://github.com/panoply/liquify/issues"
  },
  "types": "index.d.ts",
  "main": "index.js",
  "module": "index.mjs",
  "exports": {
    "require": "./index.js",
    "import": "./index.mjs"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup --minify-identifiers --minify-whitespace",
    "pack": "cd versions; pnpm pack ../ && cd ..",
    "play": "ava tests/play.test.mjs --color --watch",
    "test": "ava tests/cases/*.test.mjs --serial",
    "test:attributes": "ava tests/cases/attributes* ---",
    "test:comments": "ava tests/cases/comments* ---",
    "test:css": "ava tests/cases/css* ---",
    "test:language": "ava tests/cases/language* ---",
    "test:javascript": "ava tests/cases/javascript* ---"
  },
  "ava": {
    "extensions": [
      "mjs"
    ],
    "files": [
      "./tests/cases/*.test.mjs"
    ],
    "cache": false
  },
  "tsup": {
    "entry": [
      "./src/index.ts"
    ],
    "outDir": "./",
    "treeshake": true,
    "globalName": "prettify",
    "splitting": false,
    "format": [
      "cjs",
      "esm",
      "iife"
    ]
  },
  "prettier": "@liquify/prettier-config",
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "index.js",
      "index.mjs",
      "**/node_modules/*"
    ],
    "extends": [
      "@liquify/eslint-config"
    ],
    "rules": {
      "no-lone-blocks": "off",
      "no-unmodified-loop-condition": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "operator-linebreak": [
        "error",
        "after",
        {
          "overrides": {
            "?": "before",
            ":": "before",
            "&&": "after",
            "||": "after",
            "+": "before"
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@liquify/eslint-config": "workspace:*",
    "@liquify/test-utils": "workspace:^1.0.0",
    "ava": "^4.2.0",
    "tsup": "^6.1.0",
    "type-fest": "^2.13.0"
  }
}
