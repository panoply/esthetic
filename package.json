{
  "name": "@liquify/prettify",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "author": "ΝΙΚΟΛΑΣ ΣΑΒΒΙΔΗΣ <nicos@gmx.com>",
  "description": "🩸 Liquid Language beautification support for multiple languages.",
  "engines": {
    "pnpm": ">=4",
    "node": ">=12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/panoply/liquify/master/packages/prettify"
  },
  "bugs": {
    "url": "https://github.com/panoply/liquify/issues"
  },
  "types": "index.d.ts",
  "main": "package/index.js",
  "module": "package/index.mjs",
  "exports": {
    "require": "./package/index.js",
    "import": "./package/index.mjs"
  },
  "scripts": {
    "dev": "rollup -c -w",
    "types": "tsc --emit",
    "build": "rollup -c --environment prod",
    "pack": "cd versions; pnpm pack ../ && cd ..",
    "play": "ava test/play.test.mjs --color --watch",
    "test": "ava test/dev.test.mjs --color --verbose --watch",
    "test:markup": "ava test/markup/* --color --verbose --watch",
    "test:cases": "ava ./test/cases/* --verbose --color --watch"
  },
  "prettier": "@liquify/prettier-config",
  "eslintConfig": {
    "ignorePatterns": [
      "package"
    ],
    "extends": [
      "@liquify/eslint-config"
    ],
    "rules": {
      "no-lone-blocks": "off",
      "no-unmodified-loop-condition": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "operator-linebreak": [
        "error",
        "after",
        {
          "overrides": {
            "?": "before",
            ":": "before",
            "&&": "after",
            "||": "after",
            "+": "before"
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@liquify/eslint-config": "workspace:*",
    "@liquify/test-utils": "workspace:*",
    "ava": "^4.2.0",
    "chalk": "^5.0.1",
    "dedent": "^0.7.0",
    "esm": "^3.2.25",
    "type-fest": "^2.13.0"
  },
  "dependencies": {
    "prettier": "^2.6.2"
  }
}
