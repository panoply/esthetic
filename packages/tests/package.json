{
  "name": "@prettify/tests",
  "version": "0.1.0",
  "description": "Helper utilities for working with the AVA test runner in Prettify",
  "author": {
    "name": "Νίκος Σαβίδης",
    "email": "n.savvidis@gmx.com"
  },
  "license": "MIT",
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.js"
  },
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/panoply/prettify/tests/utils"
  },
  "bugs": {
    "url": "https://github.com/panoply/prettify/issues"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup --minify",
    "pack": "cd versions; pnpm pack ../ && cd ..",
    "test": "ava --verbose"
  },
  "tsup": {
    "entry": [
      "./src/index.ts"
    ],
    "treeshake": true,
    "dts": true,
    "external": [
      "chalk",
      "cli-highlight",
      "fs-extra"
    ],
    "splitting": false,
    "format": [
      "cjs",
      "esm"
    ]
  },
  "prettier": "@liquify/prettier-config",
  "eslintConfig": {
    "ignorePatterns": [
      "package/*",
      "index.cjs",
      "index.js",
      "index.d.ts"
    ],
    "extends": [
      "@liquify/eslint-config"
    ]
  },
  "devDependencies": {
    "@liquify/eslint-config": "workspace:*",
    "@liquify/prettier-config": "workspace:*",
    "@liquify/prettify": "workspace:*",
    "@liquify/tsconfig": "workspace:*",
    "@types/node": "^18.11.4",
    "@types/prompts": "^2.4.1",
    "ava": "^5.0.1",
    "tsup": "^6.3.0"
  },
  "peerDependencies": {
    "ava": "^4.2.0"
  },
  "dependencies": {
    "chalk": "^5.1.2",
    "cli-highlight": "^2.1.11",
    "prompts": "^2.4.2"
  }
}
