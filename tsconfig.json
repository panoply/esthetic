{
  "extends": "@liquify/tsconfig",
  "exclude": [
    "node_modules/**",
    "package",
    "test",
    "indexs.mjs",
    "indexs.js",
    "index.d.ts"
  ],
  "include": [
    "src",
    "types",
    "tests/**/*.mjs",
    "tests/cases/attributes.test.js"
  ],
  "compilerOptions": {
    "incremental": false,
    "allowJs": true,
    "declaration": true,
    "removeComments": false,
    "module": "ES2015",
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "paths": {
      "types/*": [
        "./types/*"
      ],
      "format": [
        "src/format/index.ts"
      ],
      "lexers": [
        "./src/lexers/index.ts"
      ],
      "shared": [
        "./src/shared/index.ts"
      ],
      "utils": [
        "./src/utils/index.ts"
      ],
      "@comments/*": [
        "./src/comments/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@parse/*": [
        "src/parse/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@prettify/*": [
        "src/modelx.ts",
        "src/prettifyx.ts"
      ],
      "@liquify/ava/prettify": [
        "./node_modules/@liquify/ava/package/prettify.d.ts"
      ]
    }
  }
}
